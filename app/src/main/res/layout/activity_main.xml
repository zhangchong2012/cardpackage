<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangchong.myapplication.MainActivity">

    <TextView
        android:id="@+id/scale_out"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="放大"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:layout_constraintRight_toLeftOf="@+id/translate_out"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:onClick="onClickScale"/>

    <TextView
        android:id="@+id/translate_out"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="位移"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/scale_out"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:onClick="onClickTranslate"/>

</android.support.constraint.ConstraintLayout>
